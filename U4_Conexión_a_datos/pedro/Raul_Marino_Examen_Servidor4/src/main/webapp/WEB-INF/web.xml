<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee ; http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>ExamenServidor</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>Examen Servidor</description>
		<res-ref-name>jdbc/ConexionMariadb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<session-config>
  		<session-timeout>300</session-timeout>
 	</session-config>

	<servlet>
		<servlet-name>Main</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.MainServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.RegisterServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Search</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.SearchProductServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AdminInicio</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.AdminInicioServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LogOut</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.LogOutServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListaOficina</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.OficinasServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>EditarProduct</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.EditarProductServlet</servlet-class>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Search</servlet-name>
		<url-pattern>/Search</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AdminInicio</servlet-name>
		<url-pattern>/Admin/Inicio</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogOut</servlet-name>
		<url-pattern>/LogOut</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListaOficina</servlet-name>
		<url-pattern>/ListaOficina</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EditarProduct</servlet-name>
		<url-pattern>/Admin/EditarProduct</url-pattern>
	</servlet-mapping>		

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/img/*</url-pattern>
		<url-pattern>/css/*</url-pattern>
		<url-pattern>/js/*</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>org.iesalixar.servidor.filters.FiltroAdmin</filter-class>		
	</filter>
	
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>org.iesalixar.servidor.filters.FiltroUsuario</filter-class>		
	</filter>
	
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<servlet-name>AdminInicio</servlet-name>
		<servlet-name>EditarProduct</servlet-name>		
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<servlet-name>ListaOficina</servlet-name>
		<servlet-name>Search</servlet-name>
	</filter-mapping>	

</web-app>